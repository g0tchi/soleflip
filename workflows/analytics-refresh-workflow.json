{
  "name": "Analytics Refresh - Daily at 3 AM",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "cronExpression",
              "expression": "0 3 * * *"
            }
          ]
        }
      },
      "id": "schedule-analytics-1",
      "name": "Every Day at 3 AM",
      "type": "n8n-nodes-base.scheduleTrigger",
      "typeVersion": 1.3,
      "position": [250, 300]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT * FROM refresh_analytics_views();",
        "options": {}
      },
      "id": "refresh-views-1",
      "name": "Refresh Materialized Views",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.5,
      "position": [450, 300],
      "credentials": {
        "postgres": {
          "id": "soleflip-postgres",
          "name": "SoleFlip Database"
        }
      },
      "onError": "continueRegularOutput"
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "version": 2
          },
          "combinator": "and",
          "conditions": [
            {
              "id": "check-refresh-success",
              "operator": {
                "type": "object",
                "operation": "exists"
              },
              "leftValue": "={{ $json }}"
            }
          ]
        }
      },
      "id": "check-refresh-1",
      "name": "Refresh Successful?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2.3,
      "position": [650, 300]
    },
    {
      "parameters": {
        "mode": "manual",
        "assignments": {
          "assignments": [
            {
              "id": "timestamp",
              "name": "timestamp",
              "type": "string",
              "value": "={{ $now.toISO() }}"
            },
            {
              "id": "workflow",
              "name": "workflow",
              "type": "string",
              "value": "Analytics Refresh"
            },
            {
              "id": "status",
              "name": "status",
              "type": "string",
              "value": "success"
            },
            {
              "id": "views_refreshed",
              "name": "views_refreshed",
              "type": "number",
              "value": "={{ $('Refresh Materialized Views').item.json.length || 0 }}"
            },
            {
              "id": "details",
              "name": "details",
              "type": "string",
              "value": "={{ JSON.stringify($('Refresh Materialized Views').item.json) }}"
            },
            {
              "id": "message",
              "name": "message",
              "type": "string",
              "value": "All materialized views refreshed successfully"
            }
          ]
        }
      },
      "id": "log-success-analytics-1",
      "name": "Log Success",
      "type": "n8n-nodes-base.set",
      "typeVersion": 3.4,
      "position": [850, 200]
    },
    {
      "parameters": {
        "mode": "manual",
        "assignments": {
          "assignments": [
            {
              "id": "timestamp",
              "name": "timestamp",
              "type": "string",
              "value": "={{ $now.toISO() }}"
            },
            {
              "id": "workflow",
              "name": "workflow",
              "type": "string",
              "value": "Analytics Refresh"
            },
            {
              "id": "status",
              "name": "status",
              "type": "string",
              "value": "error"
            },
            {
              "id": "error_message",
              "name": "error_message",
              "type": "string",
              "value": "={{ $json.error?.message || 'Materialized views refresh failed' }}"
            },
            {
              "id": "failed_step",
              "name": "failed_step",
              "type": "string",
              "value": "Refresh Materialized Views"
            }
          ]
        }
      },
      "id": "log-error-analytics-1",
      "name": "Log Error",
      "type": "n8n-nodes-base.set",
      "typeVersion": 3.4,
      "position": [850, 400]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "INSERT INTO logging.system_logs (level, component, message, details, created_at)\nVALUES (\n  '{{ $json.status === \"success\" ? \"info\" : \"error\" }}',\n  'n8n-analytics-refresh',\n  '{{ $json.message || $json.error_message }}',\n  '{{ JSON.stringify($json) }}',\n  NOW()\n);",
        "options": {}
      },
      "id": "save-log-1",
      "name": "Save Log to Database",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2.5,
      "position": [1050, 300],
      "credentials": {
        "postgres": {
          "id": "soleflip-postgres",
          "name": "SoleFlip Database"
        }
      }
    }
  ],
  "connections": {
    "Every Day at 3 AM": {
      "main": [
        [
          {
            "node": "Refresh Materialized Views",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Refresh Materialized Views": {
      "main": [
        [
          {
            "node": "Refresh Successful?",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Refresh Successful?": {
      "main": [
        [
          {
            "node": "Log Success",
            "type": "main",
            "index": 0
          }
        ],
        [
          {
            "node": "Log Error",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Log Success": {
      "main": [
        [
          {
            "node": "Save Log to Database",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Log Error": {
      "main": [
        [
          {
            "node": "Save Log to Database",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {
    "executionOrder": "v1",
    "saveDataErrorExecution": "all",
    "saveDataSuccessExecution": "all",
    "saveExecutionProgress": true
  }
}
