                },
                {
                  "key": "batch_size",
                  "value": "1000",
                  "type": "text",
                  "description": "Number of records per batch"
                },
                {
                  "key": "validate_only",
                  "value": "false",
                  "type": "text",
                  "description": "Set to true for validation only"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/integration/webhooks/stockx/upload",
