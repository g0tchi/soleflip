# ==============================================
# SoleFlip Environment Configuration
# ==============================================

# Core Database Settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_db_password_here
POSTGRES_DB=postgres

# Redis Settings
REDIS_PASSWORD=your_secure_redis_password_here

# Domain Configuration (Replace with your Synology DDNS)
DOMAIN_NAME=your-nas.synology.me

# ==============================================
# API Configuration (.env.api)
# ==============================================

# Security
FIELD_ENCRYPTION_KEY=generate_with_fernet_key
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# StockX Integration
STOCKX_CLIENT_ID=your_stockx_client_id
STOCKX_CLIENT_SECRET=your_stockx_client_secret
STOCKX_ENVIRONMENT=sandbox  # or production

# File Upload Settings
MAX_UPLOAD_SIZE_MB=100
ALLOWED_FILE_TYPES=csv,xlsx,jpg,jpeg,png

# ==============================================
# Metabase Configuration
# ==============================================

# Email Settings
METABASE_EMAIL_FROM=metabase@yourdomain.com
METABASE_SMTP_HOST=mail.infomaniak.com
METABASE_SMTP_USER=your_smtp_username
METABASE_SMTP_PASS=your_smtp_password

# ==============================================
# Budibase Configuration
# ==============================================

BUDIBASE_JWT_SECRET=your_budibase_jwt_secret_here
BUDIBASE_INTERNAL_API_KEY=your_budibase_api_key_here

# ==============================================
# N8N Configuration
# ==============================================

N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_n8n_password_here

# ==============================================
# Development Settings
# ==============================================

ENVIRONMENT=development  # development, staging, production
DEBUG=false
LOG_LEVEL=info

# ==============================================
# Backup Settings
# ==============================================

BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE_HOUR=2  # 2 AM daily backup