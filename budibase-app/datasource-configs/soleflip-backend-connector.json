{
  "name": "SoleFlipper Backend API Connector",
  "type": "rest",
  "config": {
    "url": "http://127.0.0.1:8000/api/v1",
    "defaultHeaders": {
      "Content-Type": "application/json",
      "Accept": "application/json"
    },
    "authentication": {
      "type": "none",
      "description": "No authentication required for local backend"
    },
    "timeout": 10000
  },
  "queries": {
    "getQuickFlipOpportunities": {
      "name": "Get QuickFlip Opportunities",
      "method": "GET",
      "path": "/quickflip/opportunities",
      "parameters": {
        "min_profit_margin": {
          "type": "number",
          "default": 10.0,
          "description": "Minimum profit margin percentage"
        },
        "min_gross_profit": {
          "type": "number",
          "default": 20.0,
          "description": "Minimum gross profit in EUR"
        },
        "max_buy_price": {
          "type": "number",
          "description": "Maximum buy price filter"
        },
        "sources": {
          "type": "string",
          "description": "Comma-separated list of sources"
        },
        "limit": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of results"
        }
      }
    },
    "getOpportunitySummary": {
      "name": "Get Opportunities Summary",
      "method": "GET",
      "path": "/quickflip/opportunities/summary"
    },
    "getOpportunitiesByProduct": {
      "name": "Get Opportunities by Product",
      "method": "GET",
      "path": "/quickflip/opportunities/product/{{ product_id }}",
      "parameters": {
        "product_id": {
          "type": "string",
          "required": true,
          "description": "Product UUID"
        }
      }
    },
    "getOpportunitiesBySource": {
      "name": "Get Opportunities by Source",
      "method": "GET",
      "path": "/quickflip/opportunities/source/{{ source }}",
      "parameters": {
        "source": {
          "type": "string",
          "required": true,
          "description": "Data source name"
        },
        "limit": {
          "type": "number",
          "default": 20
        }
      }
    },
    "markOpportunityActed": {
      "name": "Mark Opportunity as Acted",
      "method": "POST",
      "path": "/quickflip/opportunities/mark-acted",
      "parameters": {
        "product_id": {
          "type": "string",
          "required": true
        },
        "source": {
          "type": "string",
          "required": true
        },
        "action": {
          "type": "string",
          "default": "purchased"
        }
      }
    },
    "getInventorySummary": {
      "name": "Get Inventory Summary",
      "method": "GET",
      "path": "/inventory/summary"
    },
    "getInventoryProducts": {
      "name": "Get Inventory Products",
      "method": "GET",
      "path": "/inventory/products",
      "parameters": {
        "limit": {
          "type": "number",
          "default": 100
        },
        "offset": {
          "type": "number",
          "default": 0
        },
        "category": {
          "type": "string",
          "description": "Product category filter"
        },
        "brand": {
          "type": "string",
          "description": "Brand filter"
        }
      }
    },
    "getProductAnalytics": {
      "name": "Get Product Analytics",
      "method": "GET",
      "path": "/analytics/products/{{ product_id }}",
      "parameters": {
        "product_id": {
          "type": "string",
          "required": true
        },
        "days": {
          "type": "number",
          "default": 30,
          "description": "Number of days for analytics"
        }
      }
    },
    "getDashboardData": {
      "name": "Get Dashboard Data",
      "method": "GET",
      "path": "/dashboard/summary"
    },
    "importMarketPrices": {
      "name": "Import Market Prices CSV",
      "method": "POST",
      "path": "/quickflip/import/csv",
      "parameters": {
        "file_path": {
          "type": "string",
          "required": true,
          "description": "Path to CSV file"
        },
        "source": {
          "type": "string",
          "default": "awin",
          "description": "Data source identifier"
        }
      }
    },
    "getImportStats": {
      "name": "Get Import Statistics",
      "method": "GET",
      "path": "/quickflip/import/stats",
      "parameters": {
        "source": {
          "type": "string",
          "description": "Specific source filter"
        }
      }
    },
    "quickFlipHealthCheck": {
      "name": "QuickFlip Health Check",
      "method": "GET",
      "path": "/quickflip/health"
    }
  },
  "webhooks": {
    "opportunityAlert": {
      "name": "Opportunity Alert Webhook",
      "path": "/webhooks/opportunity-alert",
      "method": "POST",
      "description": "Triggered when new high-profit opportunities are found"
    },
    "priceUpdate": {
      "name": "Price Update Webhook",
      "path": "/webhooks/price-update",
      "method": "POST",
      "description": "Triggered when market prices are updated"
    }
  }
}