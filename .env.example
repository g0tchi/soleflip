# ==============================================
# Soleflip Environment Configuration
# ==============================================
# Copy this file to .env and configure with your actual values

# Environment
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql+asyncpg://soleflip:YOUR_PASSWORD_HERE@localhost:5432/soleflip

# Security Keys
# Generate FIELD_ENCRYPTION_KEY with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FIELD_ENCRYPTION_KEY=GENERATE_NEW_KEY_HERE
SECRET_KEY=generate-a-secure-secret-key

# Logging
LOG_LEVEL=INFO

# ==============================================
# Docker Compose Configuration
# ==============================================

# PostgreSQL
POSTGRES_PASSWORD=changeme_secure_password

# Redis
REDIS_PASSWORD=redis_secure_password
REDIS_URL=redis://:redis_secure_password@localhost:6379/0

# ==============================================
# n8n Configuration
# ==============================================
N8N_HOST=localhost
N8N_WEBHOOK_URL=http://localhost:5678/
# Generate with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=generate_with_openssl_rand_hex_32

# ==============================================
# Memori MCP Server Configuration
# ==============================================
# AI memory features (automatically enabled in docker-compose.portainer.yml)
# Get OpenAI API key from: https://platform.openai.com/api-keys

# Namespace for memory organization
MEMORI_NAMESPACE=soleflip

# AI-powered memory ingestion (requires OpenAI API key)
MEMORI_CONSCIOUS_INGEST=true
MEMORI_AUTO_INGEST=true

# OpenAI API Key for embeddings and conscious ingestion
MEMORI_OPENAI_API_KEY=

# Logging
MEMORI_LOGGING_LEVEL=INFO
MEMORI_VERBOSE=false

# Performance tuning
MEMORI_MAX_MEMORIES_PER_QUERY=5
MEMORI_CONTEXT_LIMIT=3

# ==============================================
# Timezone
# ==============================================
TIMEZONE=Europe/Berlin

# ==============================================
# Optional: StockX Integration
# ==============================================
# STOCKX_CLIENT_ID=your_client_id
# STOCKX_CLIENT_SECRET=your_client_secret

# ==============================================
# Optional: Affiliate APIs
# ==============================================
# AWIN_API_KEY=your_awin_api_key
